        <!-- Book Cards Container -->
        <div id="book-container" class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Content will be injected here by JavaScript -->
        </div>
    </div>


    <!-- JavaScript for Data and Functionality -->
    <script>
        // --- Data Definitions ---

