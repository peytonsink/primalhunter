        ];

        // Inline SVG for the Bow and Arrow cover art
        const BOW_ARROW_SVG = `
            <svg class="w-12 h-12 text-yellow-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2v20M5 12h14M18 17l6-5-6-5M5 17l6-5-6-5"/>
            </svg>
        `;


        // --- DOM Elements & State ---

        const container = document.getElementById('book-container');
        const homeView = document.getElementById('home-view');
        const archiveView = document.getElementById('archive-view');
        const navHome = document.getElementById('nav-home');
        const navArchive = document.getElementById('nav-archive');

        // Flags to track if content has been rendered
        let cardsRendered = false;

        // --- Rendering Functions ---

        // Function to create and render a book card (Archived logic remains the same)
        function renderBookCards() {
            if (cardsRendered) {
                return; 
            }
            container.innerHTML = '';
            
            primalHunterBooks.forEach(book => {
                const card = document.createElement('div');
                card.className = 'book-card bg-gray-800 rounded-xl shadow-xl border border-gray-700 p-0 flex flex-col justify-between overflow-hidden'; // Removed padding and added overflow hidden
                
                // 1. Cover Section (New)
                const coverSection = document.createElement('div');
                coverSection.className = 'flex flex-col items-center justify-center p-6 bg-gray-900 border-b-2 border-yellow-400';
                coverSection.innerHTML = `
                    <div class="w-20 h-20 flex items-center justify-center bg-gray-800 rounded-full mb-3 border-4 border-red-500 shadow-lg">
                        ${BOW_ARROW_SVG}
                    </div>
                    <h3 class="text-3xl font-semibold cinzel text-yellow-400 text-center">${book.title}</h3>
                    <span class="text-xl cinzel font-bold text-red-500 mt-1">Volume ${book.number}</span>
                `;
                card.appendChild(coverSection);

                // 2. Details and Toggle (Existing, now with padding)
                const mainContent = document.createElement('div');
                mainContent.className = 'p-6 flex flex-col justify-between flex-grow';

                const detailsContent = document.createElement('div');
                detailsContent.className = 'details-content';

                // Initial Plot Arc Summary (always visible when card is created)
                mainContent.innerHTML += `
                    <div class="mb-4">
                        <h4 class="font-bold text-red-300 mb-2">Key Progression & Skills</h4>
                        <ul class="space-y-1">
                            ${book.skills.slice(0, 3).map(skill => `<li class="text-sm list-disc ml-4 text-gray-400">${skill}</li>`).join('')}
                        </ul>
                        <p class="text-xs text-gray-500 mt-2">... and ${book.skills.length - 3} more details hidden</p>
                    </div>
                `;


                detailsContent.innerHTML += `
                    <div class="mb-4 p-4 bg-gray-700/50 rounded-lg">
                        <h4 class="font-bold text-red-300 mb-2">Full Plot Arc</h4>
                        <p class="text-gray-300 text-sm">${book.arc}</p>
                    </div>
                    <div class="p-4 bg-gray-700/50 rounded-lg">
                        <h4 class="font-bold text-red-300 mb-2">All Skills & Progression</h4>
                        <ul class="space-y-1">
                            ${book.skills.map(skill => `<li class="text-sm list-disc ml-4 text-gray-400">${skill}</li>`).join('')}
                        </ul>
                    </div>
                `;
                
                mainContent.appendChild(detailsContent);


                const toggleButton = document.createElement('button');
                toggleButton.className = 'mt-4 w-full py-2 bg-red-600 hover:bg-red-700 rounded-lg text-white font-bold transition duration-200';
                toggleButton.textContent = 'View Full Details ↓';

                let isOpen = false;
                toggleButton.onclick = () => {
                    isOpen = !isOpen;
                    detailsContent.classList.toggle('open', isOpen);
                    toggleButton.textContent = isOpen ? 'Hide Full Details ↑' : 'View Full Details ↓';
                };

                mainContent.appendChild(toggleButton);
                card.appendChild(mainContent);
                container.appendChild(card);
            });
            cardsRendered = true; 
        }
        
        // --- View Controller ---

        // Function to switch between views
        function showView(viewId) {
            // Hide all views
            homeView.classList.add('hidden');
            archiveView.classList.add('hidden');

            // Reset active state for navigation links
            navHome.classList.remove('active');
            navArchive.classList.remove('active');

            // Show the requested view
            if (viewId === 'home-view') {
                homeView.classList.remove('hidden');
                navHome.classList.add('active');
            } else if (viewId === 'archive-view') {
                archiveView.classList.remove('hidden');
                navArchive.classList.add('active');
                renderBookCards(); 
            }
        }
        
        // Initial setup
        window.onload = () => {
            // Start on the home page
            showView('home-view');
        };
    </script>

</body>
